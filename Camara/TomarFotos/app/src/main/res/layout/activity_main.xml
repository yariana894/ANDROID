<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thumbnailButton"
        android:id="@+id/button"
        android:onClick="hacerFotoThumbnail"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thumbnailText"
        android:id="@+id/textView"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guardarFoto"
        android:id="@+id/button2"
        android:onClick="guardarFotoTamaÃ±oReal"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guardarFotoText"
        android:id="@+id/textView2"
        android:layout_below="@+id/button2"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="587dp"
        android:layout_below="@+id/button"
        android:layout_marginTop="59dp" />
</RelativeLayout>