<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#BAB6B6"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/perfil" />

    <TextView
        android:id="@+id/informacionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="161dp"
        android:background="#BAB6B6"
        android:text="Aquí se mostrará la información complementaria del contacto seleccionado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#5D4037" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/informacionTV"
        android:layout_alignParentTop="true"
        android:text="Información del Contacto:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
