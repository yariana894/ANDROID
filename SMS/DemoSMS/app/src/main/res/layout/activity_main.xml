<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/lbTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Número de Teléfono:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Número de Teléfono:"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="-20dp"
        android:layout_marginRight="-20dp"
        android:layout_toEndOf="@+id/lbTelefono"
        android:layout_toRightOf="@+id/lbTelefono" />

    <Button
        android:id="@+id/btnEnviarSMS"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_above="@+id/txtRecibirSMS"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="146dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="17dp"
        android:onClick="EnviarSMS"
        android:text="Enviar SMS" />

    <TextView
        android:id="@+id/txtRecibirSMS"
        android:layout_width="wrap_content"
        android:layout_height="372dp"
        android:layout_alignEnd="@+id/txtTelefono"
        android:layout_alignRight="@+id/txtTelefono"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="0dp"
        android:text="Aquí saldran los SMS Recibidos"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editTextMensaje"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_above="@+id/btnEnviarSMS"
        android:text="texto:"
        android:layout_below="@+id/txtTelefono"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="167dp"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>